            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="4" Padding="0"
              BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}">
            <Label Text="Bonus WCAG Question!"
                SemanticProperties.HeadingLevel="Level1" FontSize="Title"
                TextColor="{AppThemeBinding Light=White, Dark=White}"
                HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>

        <Grid Grid.Row="1" Margin="0" Padding="0" 
              BackgroundColor="{AppThemeBinding Light=White, Dark=Black}">
            <Label Margin="10,0,10,0" x:Name="WCAGQuestion" 
                SemanticProperties.HeadingLevel="Level2" FontSize="Medium"
                TextColor="{AppThemeBinding Light=Black, Dark=White}"
                HorizontalOptions="Start" />
        </Grid>

        <Label Grid.Row="2" Margin="10,14,10,0"
            Text="Select the WCAG groups containing the answer, and then check all WCAG that apply." />

        <!-- Barker Todo: Originally this FlexLayout had no HeightRequest set, because it would grow to 
            accomodate the size of its contents. However, after upgrading to VS 17.4.0 Preview 1.0
            the FlexLayout seemed to be the height it would be if it had no contents. It seems at 
            StackOverflow others also hit issues with the FlexLayout after upgrading VS to 17.4.0. 
            So for now, set an explicit height on the FlexHeight, but remove this when possible. -->
        
        <FlexLayout Grid.Row="3" Wrap="Wrap" Margin="4,0,4,0" Padding="0" 
            SemanticProperties.Description="WCAG Groups" MinimumHeightRequest="110">

            <Picker x:Name="PerceivablePicker" ClassId="Perceivable" windows:VisualElement.AccessKey="P" 
                Title="Perceivable groups"
                Margin="8"
                SelectedIndexChanged="JumpToPicker_SelectedIndexChanged">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>1.1 Text Alternatives</x:String>
                        <x:String>1.2 Time-based Media</x:String>
                        <x:String>1.3 Adaptable</x:String>
                        <x:String>1.4 Distinguishable</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Picker x:Name="OperablePicker" ClassId="Operable" windows:VisualElement.AccessKey="O" 
                Title="Operable groups"
                Margin="8"
                SelectedIndexChanged="JumpToPicker_SelectedIndexChanged">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>2.1 Keyboard Accessible</x:String>
                        <x:String>2.2 Enough Time</x:String>
                        <x:String>2.3 Seizures and Physical Reactions</x:String>
                        <x:String>2.4 Navigable</x:String>
                        <x:String>2.5 Input Modalities</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Picker x:Name="UnderstandablePicker" ClassId="Understandable" windows:VisualElement.AccessKey="U" 
                Title="Understandable groups"
                Margin="8"
                SelectedIndexChanged="JumpToPicker_SelectedIndexChanged">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>3.1 Readable</x:String>
                        <x:String>3.2 Predictable</x:String>
                        <x:String>3.3 Input Assistance</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Picker x:Name="RobustPicker" ClassId="Robust" windows:VisualElement.AccessKey="R" 
                Title="Robust groups"
                Margin="8"
                SelectedIndexChanged="JumpToPicker_SelectedIndexChanged">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>4.1 Compatible</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
