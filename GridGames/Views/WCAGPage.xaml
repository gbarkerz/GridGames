            <Picker x:Name="PerceivablePicker" ClassId="Perceivable" windows:VisualElement.AccessKey="P" 
                Title="Jump to Perceivable groups"
                Margin="10"
                SelectedIndexChanged="JumpToPicker_SelectedIndexChanged">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>1.1 Text Alternatives</x:String>
                        <x:String>1.2 Time-based Media</x:String>
                        <x:String>1.3 Adaptable</x:String>
                        <x:String>1.4 Distinguishable</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Picker x:Name="OperablePicker" ClassId="Operable" windows:VisualElement.AccessKey="O" 
                Title="Jump to Operable groups"
                Margin="10"
                SelectedIndexChanged="JumpToPicker_SelectedIndexChanged">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>2.1 Keyboard Accessible</x:String>
                        <x:String>2.2 Enough Time</x:String>
                        <x:String>2.3 Seizures and Physical Reactions</x:String>
                        <x:String>2.4 Navigable</x:String>
                        <x:String>2.5 Input Modalities</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Picker x:Name="UnderstandablePicker" ClassId="Understandable" windows:VisualElement.AccessKey="U" 
                Title="Jump to Understandble groups"
                Margin="10"
                SelectedIndexChanged="JumpToPicker_SelectedIndexChanged">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>3.1 Readable</x:String>
                        <x:String>3.2 Predictable</x:String>
                        <x:String>3.3 Input Assistance</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Picker x:Name="RobustPicker" ClassId="Robust" windows:VisualElement.AccessKey="R" 
                Title="Jump to Robust groups"
                Margin="10"
                SelectedIndexChanged="JumpToPicker_SelectedIndexChanged">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>4.1 Compatible</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
