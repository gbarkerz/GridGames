<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:GridGames.ResX"
             xmlns:windows="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.WindowsSpecific;assembly=Microsoft.Maui.Controls"
             x:Class="GridGames.Views.WheresTipPage">

    <Grid Margin="0" Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Padding="10" Margin="0"
            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}">
            <Label Text="Where's WCAG? Tip"
                SemanticProperties.HeadingLevel="Level1" FontSize="Title"
                TextColor="{AppThemeBinding Light=White, Dark=White}"
                HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>

        <Grid Grid.Row="1" Padding="0" Margin="20,10,20,10"
              BackgroundColor="{AppThemeBinding Light=White, Dark=Black}">
            <Label TextColor="{AppThemeBinding Light=Black, Dark=White}"
                FontSize="Medium">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="The &quot;" />
                        <Span Text="{Binding wcagName}" />
                        <Span Text="&quot; WCAG group relates to content being " />
                        <Span Text="{Binding wcagGroupName}" />
                        <Span Text=", and all WCAG relating to content being " />
                        <Span Text="{Binding wcagGroupName}" />
                        <Span Text=" start with the number &quot;" />
                        <Span Text="{Binding wcagGroupNumber}" />
                        <Span Text="&quot;." />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </Grid>

        <!-- Barker: Accessible links don't seem natively supported in MAUI at the moment, so used buttons instead. -->

        <Button Grid.Row="2" Margin="0,20,0,0" Padding="8"
            windows:VisualElement.AccessKey="W"    
            Text="Learn more about this WCAG group at the WCAG documentation"
            HorizontalOptions="Center"
            Clicked="LearnMoreButton_Clicked" />

        <Label Grid.Row="3" Margin="20,30,20,10"
            Text="{x:Static resources:AppResources.TipVisitEN301}" />

        <Button Grid.Row="4" Margin="0" Padding="8"
            windows:VisualElement.AccessKey="E"                
            Text="Learn more about the EN 301 549 standard"
            HorizontalOptions="Center"
            Clicked="LearnMoreEN301Button_Clicked" />

        <Button Grid.Row="6" Text="Close"
            windows:VisualElement.AccessKey="C"                
            HorizontalOptions="End" Margin="0,0,4,4" Padding="8"
            Clicked="WheresTipCloseButton_Clicked" />

    </Grid>
    
</ContentPage>
    